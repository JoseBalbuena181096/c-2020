/* USER CODE BEGIN PV */
int  MAX_SPEED=1000;//596-686
int  MED_SPEED=1000;//314---400
int flag=0;
int Kp=0;//106-135
int Ki=0;//
int Kd=0;//216-275
int x[3]={0,0,0};
signed int u=0;
enum {STOP,STARTING,RUN} state=STOP;
enum {CENTER,RIGHT,LEFT}out_state=CENTER;
uint16_t lectura_adc[8];
int b[8];
int error=0;
int line=0;
signed int speed_1=0;
signed int speed_2=0;
int sum=0;
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
